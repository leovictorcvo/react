<%- include('../header') %>
<div class="card">
  <header class="card-header">
    <h4 class="card-title mt-2">Criar nova categoria</h4>
  </header>
  <article class="card-body">
    <form method="POST">
        <div class="form-group">
            <label>Nome</label>
            <input name="name" type="text" class="form-control <%= errors.indexOf('name') >= 0 ? 'is-invalid' : 'is-valid' %>" placeholder="Categoria" autocomplete="off" value="<%= form.name %>"/>
            <div class="invalid-feedback">
                Informe o nome da categoria com o mínimo de 5 caracteres
            </div>
          </div>
          <div class="form-group">
              <label>Descrição</label>
              <textarea name="description" class="form-control <%= errors.indexOf('description') >= 0 ? 'is-invalid' : 'is-valid' %>" placeholder="Descrição"><%= form.description %></textarea>
              <div class="invalid-feedback">
                Informe uma descrição para a categoria com o mínimo de 5 caracteres
            </div>
            </div>
          <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">
            Salvar nova categoria
          </button>
      </form>
  </article>
</div>
<%- include('../../footer') %>
